.container.user-new{action: ""}
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :username, type: "text", placeholder: "Username", autofocus: true
            .user-image.col-md-2
              = image_tag("", id: "user_avatar", class: "media-object", style: "display:none; width:100%; height:100%;")
              = button_tag "Add Image", class: "btn btn-primary"
              = f.file_field :avatar
          .user-user-email.row
            .user-email
              = f.email_field :email, autofocus: true, type: "email", placeholder: "E-Mail"
          .user-user-password.row
            .user-user-password
              = f.password_field :password, autocomplete: "off", placeholder: "Password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, type: "text", placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :works, cols: "30", rows: "4", placeholder: "Works"
      .row.text-center.user-btn
        = f.submit class: "btn btn-lg btn-primary btn-block", value: "Save"
        = render "devise/shared/links"
