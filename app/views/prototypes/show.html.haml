.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = image_tag(@prototype.user.avatar, alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", style: "width: 64px; height: 64px;")
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.name
          .proto-user
            = link_to "by #{@prototype.user.username}", user_path(@prototype.user.id)
            %span.degree
              = @prototype.user.member
              = @prototype.user.works

    .col-md-6.text-right#js-like
      = render partial: "likes/like", locals: { like: @like, prototype: @prototype }
  .row
    .col-md-9
      = image_tag(@prototype.images.main[0].image, width:'650px', height:"400px")
    .col-md-3
      %ul.proto-sub-list.list-group
        - 3.times do |i|
          %li.list-group-item
            = image_tag(@prototype.images.sub[i].image, width:'180.5px', height:"200px")
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  -if user_signed_in?
    .row.proto-comments
      %h4.col-md-12
        Comments
        %span.num
          (#{@prototype.comments_count})
      .col-md-8#comment_area
        #comment_list
          = render partial: "comments/comment", collection: @prototype.comments
        = form_for @comments, url: prototype_comments_path(@prototype, @comment),method: "post", remote: true do |f|
          .form-inline#new_comment
            %h4 Write a comment
            .row
              .form-group.col-md-10
                = f.text_area :text, placeholder: "Your comments", rows: "3", id: "comment_text"
              .form-group.col-md-2
                = f.submit :comment, class: "button btn btn-primary", value: "COMMENT"
