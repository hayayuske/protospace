.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to prototype_path(prototype.id) do
      = image_tag(prototype.images.main[0].image)
    .caption
      %h3
        = prototype.name
        .proto-meta
          .proto-user
            = link_to "by #{prototype.user.username}", user_path(prototype.user.id)
          .proto-posted
            = prototype.created_at.strftime('%b %d')
        %ul.proto-tag-list.list-inline
          - prototype.tags.each do |tag|
            %li
              =link_to "#{tag.name}", tag_path(tag.id), class: "btn btn-default"
