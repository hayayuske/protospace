.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag(@user.avatar, alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", style: "width: 64px; height: 64px;")
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            29
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works
.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .dropdown.drop_menu_location
          %button{class: "btn btn-default dropdown-toggle", 'data-toggle' => "dropdown", type: "button", id: "dropdownMenu"} Action
          %ul.dropdown-menu{'aria-labelledby' => "dropdownMenu1"}
            %li
              = link_to "Delete"
            %li
              = link_to "Edit", edit_prototype_path(prototype.id), method: :get
        .thumbnail
          = link_to prototype_path(prototype.id) do
            = image_tag(prototype.images.main[0].image)
          .caption
            %h3
              = prototype.name
              .proto-meta
                .proto-date
                  = prototype.created_at.strftime('%b %d')
              %ul.proto-tag-list.list-inline
                %li
                  %a{href: "#", class: "btn btn-default"} iPad
                %li
                  %a{href: "#", class: "btn btn-default"} wireframe

.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label": "Previous", href: "#"}
        %span{"aria-hidden": "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      %a{href: "#"} 2
    %li
      %a{href: "#"} 3
    %li
      %a{href: "#"} 4
    %li
      %a{href: "#"} 5
    %li
      %a{"aria-label": "Next", href: "#"}
        %span{"aria-hidden": "true"} »
